rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - secure access
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth == null; // Allow registration
      
      // Additional validation for verified users
      match /{document} {
        allow update: if 
          request.auth != null && 
          request.auth.uid == userId &&
          request.auth.token.email_verified == true;
      }
    }
    
    // Orders collection - only verified users can access
    match /orders/{orderId} {
      allow read, write: if 
        request.auth != null && 
        request.auth.token.email_verified == true;
    }
    
    // Payments collection - only verified users
    match /payments/{paymentId} {
      allow read, write: if 
        request.auth != null && 
        request.auth.token.email_verified == true;
    }
    
    // Menu collection - public read, admin write
    match /menu/{itemId} {
      allow read: if true; // Anyone can read menu
      allow write: if request.auth != null && 
        request.auth.token.admin == true; // Only admins can modify
    }
    
    // Campus-specific data
    match /campuses/{campusId} {
      allow read: if true; // Public read for campus info
      allow write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}